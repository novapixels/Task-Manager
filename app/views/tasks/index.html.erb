<h1>My tasks ☑️</h1>
<ul style="list-style-type: none;">
  <% @tasks.each do |task| %>
    <% if task.completed? %>
      <li><input type="checkbox" checked><%= link_to task.title, task_path(task) %></li>
    <% else %>
      <li><input type="checkbox"><%= link_to task.title, task_path(task) %></li>
    <% end %>
  <% end %>
</ul>
<p><%= link_to "+ Add a new task", new_path %></p>
